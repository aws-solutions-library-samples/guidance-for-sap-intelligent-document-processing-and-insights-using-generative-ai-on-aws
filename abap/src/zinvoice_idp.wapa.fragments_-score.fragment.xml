<core:FragmentDefinition                                                                                                                                                                                                                                       
	xmlns="sap.m"                                                                                                                                                                                                                                                 
	xmlns:core="sap.ui.core"                                                                                                                                                                                                                                      
    xmlns:l="sap.ui.layout"                                                                                                                                                                                                                                    
    xmlns:mc="sap.suite.ui.microchart"                                                                                                                                                                                                                         
>                                                                                                                                                                                                                                                              
<l:BlockLayout >                                                                                                                                                                                                                                               
    <l:BlockLayoutRow >                                                                                                                                                                                                                                        
        <l:BlockLayoutCell>                                                                                                                                                                                                                                    
            <FlexBox  direction="Column" alignItems="Center" justifyContent="Center" >&nbsp;                                                                                                                                                                   
                <Title text="Overall Cofidence Score"&nbsp;                                                                                                                                                                                                    
                     level="H1"                                                                                                                                                                                                                                
                     class="sapUiSmallMarginTopBottom"></Title>                                                                                                                                                                                                
                <mc:RadialMicroChart                                                                                                                                                                                                                           
                    valueColor="{path: 'score', formatter: '.formatter.formatRadialValueColor'}"                                                                                                                                                               
                    percentage="{path:'score', formatter:'.formatter.formatScore'}"                                                                                                                                                                            
                    alignContent="Center"                                                                                                                                                                                                                      
                    class="sapUiSmallMarginBottom"/>                                                                                                                                                                                                           
            </FlexBox>                                                                                                                                                                                                                                         
        </l:BlockLayoutCell>                                                                                                                                                                                                                                   
        <l:BlockLayoutCell >                                                                                                                                                                                                                                   
            <FlexBox  direction="Column" alignItems="Center" justifyContent="Center" >&nbsp;                                                                                                                                                                   
                <Title text="What is confidence score?"&nbsp;                                                                                                                                                                                                  
                     level="H1"                                                                                                                                                                                                                                
                     class="sapUiSmallMarginTopBottom"></Title>                                                                                                                                                                                                
                <Text text='{i18n>confidenceScore}'></Text>                                                                                                                                                                                                    
            </FlexBox>                                                                                                                                                                                                                                         
        </l:BlockLayoutCell>                                                                                                                                                                                                                                   
                                                                                                                                                                                                                                                               
    </l:BlockLayoutRow>                                                                                                                                                                                                                                        
   </l:BlockLayout>                                                                                                                                                                                                                                            
                                                                                                                                                                                                                                                               
</core:FragmentDefinition>                                                                                                                                                                                                                                     