<mvc:View                                                                                                                                                                                                                                                      
    xmlns:f="sap.f"                                                                                                                                                                                                                                            
    xmlns:mvc="sap.ui.core.mvc"                                                                                                                                                                                                                                
    xmlns="sap.m"                                                                                                                                                                                                                                              
    controllerName="aws.fin.ap.controllers.App">                                                                                                                                                                                                               
    <App id="idApp">                                                                                                                                                                                                                                           
        <f:FlexibleColumnLayout                                                                                                                                                                                                                                
            id="idFlexibleColumnLayout"                                                                                                                                                                                                                        
            busy="{appView>/busy}"                                                                                                                                                                                                                             
            busyIndicatorDelay="{appView>/delay}"                                                                                                                                                                                                              
            layout="{appView>/layout}"                                                                                                                                                                                                                         
            backgroundDesign="Translucent"                                                                                                                                                                                                                     
            stateChange="onFlexibleColumnLayoutStateChange"/>                                                                                                                                                                                                  
    </App>                                                                                                                                                                                                                                                     
</mvc:View>                                                                                                                                                                                                                                                    
                                                                                                                                                                                                                                                               